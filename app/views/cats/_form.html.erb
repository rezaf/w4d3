<% form_method = cat.persisted? ? "PATCH" : "POST" %>
<% action_url = cat.persisted? ? cat_url(@cat) : cats_url %>
<% submit_text = cat.persisted? ? "Update Cat!" : "Create Cat!" %>

<form action="<%= action_url %>" method="POST">
  <input type="hidden" name="_method" value="<%= form_method %>">
  
  <label for="cat_name">Cat Name</label>
  <input type="text" name="cat[name]" 
         id="cat_name" value="<%= cat.name %>">
  <br>
  
  <label for="cat_sex_male">Male</label>
  <input type="radio" name="cat[sex]" 
         id="cat_sex_male" value="M"
         <%= "checked" if cat.sex == "M" %>>
         
  <label for="cat_sex_female">Female</label>
  <input type="radio" name="cat[sex]" 
         id="cat_sex_female" value="F"
         <%= "checked" if cat.sex == "F" %>>
  <br>
  
  <label for="cat_color">Cat Color</label>
  <select name="cat[color]" id="cat_color">
    <option value=""></option>
    <option value="Black"
    <%= "selected" if cat.color == "Black" %>>Black</option>
    <option value="White"
    <%= "selected" if cat.color == "White" %>>White</option>
    <option value="Calico"
    <%= "selected" if cat.color == "Calico" %>>Calico</option>
  </select>
  <br>
  
  <label for="cat_birth_date">Birth Date</label>
  <input type="date" name="cat[birth_date]" 
  id="cat_birth_date" value="<%= cat.birth_date %>">
  <br>
  
  <label for="cat_description">Cat Description</label>
  <textarea name="cat[description]" id="cat_description">
    <%= cat.description %>
  </textarea>
  <br>
  
  <input type="submit" value="<%= submit_text %>">
</form>